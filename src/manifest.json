{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "author": "loftkun",
    "version": "1.2",
    "icons": {
        "16": "icon/16.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "action": {
        "default_popup": "popup/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "scripting",
        "storage",
        "notifications"
    ]
}